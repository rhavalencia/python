######REFACTORED#######
# Temperature Conversion Program
# Author: Rhavee
# Purpose: Convert temperatures between Celsius and Fahrenheit with error handling and retry menu

def celsius_to_fahrenheit(celsius):
    """Convert Celsius to Fahrenheit and print result."""
    result = (celsius) * (9/5) + 32
    print(f"Result: {result:.2f} degrees Fahrenheit")

def fahrenheit_to_celsius(fahrenheit):
    """Convert Fahrenheit to Celsius and print result."""
    result = (fahrenheit - 32) * (5/9)
    print(f"Result: {result:.2f} degrees Celsius")

def main():
    """Main program loop with menu-driven options."""
    while True:
        # Display menu
        print("\n--- Temperature Conversion Menu ---")
        print("A: Celsius to Fahrenheit")
        print("B: Fahrenheit to Celsius")
        print("Q: Quit")

        # Get user choice
        user_input = input("Choose an option (A/B/Q): ").strip().upper()

        if user_input == "A":
            # Celsius to Fahrenheit conversion
            try:
                celsius = float(input("Enter Temperature in Celsius: "))
                celsius_to_fahrenheit(celsius)
            except ValueError:
                print("âŒ Invalid input. Please enter a numeric value for Celsius.")

        elif user_input == "B":
            # Fahrenheit to Celsius conversion
            try:
                fahrenheit = float(input("Enter Temperature in Fahrenheit: "))
                fahrenheit_to_celsius(fahrenheit)
            except ValueError:
                print("âŒ Invalid input. Please enter a numeric value for Fahrenheit.")

        elif user_input == "Q":
            # Exit program
            print("ğŸ‘‹ Goodbye! Thanks for using the converter.")
            break

        else:
            # Invalid menu choice
            print("âŒ Invalid choice. Please select 'A', 'B', or 'Q'.")

if __name__ == "__main__":
    main()
